#!/usr/bin/env bash
set -euo pipefail

echo "[chezmoi] Arch/Garuda install script starting..."

# Ensure system is up to date
sudo pacman -Syu --noconfirm

# Install packages (Arch has these in repos)
sudo pacman -S --needed --noconfirm \
  git \
  curl \
  ca-certificates \
  wget \
  unzip \
  zip \
  tar \
  gzip \
  xz \
  jq \
  ripgrep \
  fd \
  fzf \
  neovim \
  tmux \
  python \
  python-pip \
  base-devel \
  topgrade

echo "[chezmoi] Arch/Garuda install script complete."
